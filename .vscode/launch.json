  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Testing",
      "program": "${workspaceFolder}/node_modules/.bin/mocha",
      "args": ["src/*.spec.ts"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Testing: Watch",
      "program": "${workspaceFolder}/node_modules/.bin/mocha",
      "args": ["--watch", "src/*.spec.ts"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
